<%=render :partial=>'shared/header' %>
<table class="tabbed" height="100%" width="100%" cellspacing="0" cellpadding="0">
    <tr>
        <!-- Start: SIDE BAR -->
        <td id="sidebar" class="sidebar" valign="top">
            <div class="filters">
                <%#list = "'"+controller_name.singularize+"_list'" %>
                <h4>Search <%#=controller_name.titleize %></h4>
                <div style='margin: 0px 0px 6px;'>
                    <%#=render :partial=>'admin/search' %>
                </div>
            </div>
            <div class='panel'>
                <div id='accordion'>
                    <h3><a href="#">Recent <%=controller_name.titleize %></a></h3>
                    <div id='recently'>
                        <%#= render(:partial=>"recent_items") %>
                    </div>
                </div>
            </div>
        </td>
        <!-- END: SIDE BAR -->
        <td id='main' class='main' valign='top'>
        
            <div class='title_tools'>
                <abbr id='right_arrow'>
                    &#9658;
                </abbr>&nbsp;Create<%#=link_to("Create #{controller_name.classify}",send("new_admin_#{controller_name.singularize}_path")) %>
             | <abbr id='right_arrow'>
                    &#9658;
                </abbr>&nbsp;<%=link_to"Export","" %>
              </div>
            
            
            <%=render :partial=>'shared/import_flash' %>
            <%=yield %>
        </td>
    </tr>
</table>
<%=render :partial=>'shared/footer' %>

